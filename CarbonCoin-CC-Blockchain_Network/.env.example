# =============================================================================
# CarbonCoin (CC) Environment Configuration Example
# =============================================================================
# Copy this file to .env and modify values as needed.
# All values here override defaults in config.py
# Remove or comment out a line to use the default value

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
MONGO_URI=your_mongodb_connection_string_here
MONGO_DATABASE=User
MONGO_WALLETS_COLLECTION=Wallets

# =============================================================================
# COIN CONFIGURATION
# =============================================================================
# Mining reward - amount of CC given to miner for each block mined
MINING_REWARD=10.0

# Mining difficulty - number of leading zeros required in block hash
# 2 = very easy (~instant), 3 = easy (~1-5 sec), 4 = medium (~10-30 sec), 5 = hard (~1-5 min)
MINING_DIFFICULTY=4

# Assign reward - fixed amount given to user when collection node assigns reward
ASSIGN_REWARD=5.0

# Auto-transfer threshold - when miner reaches this amount, auto-transfer to collection
MINER_AUTO_TRANSFER_THRESHOLD=100.0

# Maximum transactions per block (excluding coinbase/reward transaction)
MAX_TRANSACTIONS_PER_BLOCK=1

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
# Miner node ports (comma-separated)
MINER_PORTS=3000,3001,3002

# Collection node port
COLLECTION_PORT=7000

# Gateway API port
GATEWAY_PORT=8000

# User nodes start from this port
USER_PORT_START=5000
